<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6F0E6"
    tools:context=".PlantDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <LinearLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Plant/Species Information"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/plant_image_view"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_margin="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_bar" />

        <TextView
            android:id="@+id/plant_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/plant_image_view"
            tools:text="Anthurium andraeanum"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/genus_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Genus:"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/plant_name_text_view" />

        <TextView
            android:id="@+id/genus_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/genus_label"
            app:layout_constraintTop_toTopOf="@+id/genus_label"
            tools:text="Anthurium"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/family_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Family:"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/genus_label"
            app:layout_constraintTop_toBottomOf="@+id/genus_label" />

        <TextView
            android:id="@+id/family_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/family_label"
            app:layout_constraintTop_toTopOf="@+id/family_label"
            tools:text="Araceae"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/found_in_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Found in:"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/family_label"
            app:layout_constraintTop_toBottomOf="@+id/family_label" />

        <TextView
            android:id="@+id/found_in_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/found_in_label"
            app:layout_constraintTop_toTopOf="@+id/found_in_label"
            tools:text="This species native to Colombia and Ecuador. Also can found in Malaysia"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/add_to_favorites_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="+ Add to Favorites"
            android:textColor="@color/white"
            android:backgroundTint="#8BC34A"
            app:layout_constraintStart_toStartOf="@+id/found_in_label"
            app:layout_constraintTop_toBottomOf="@+id/found_in_text_view" />

        <TextView
            android:id="@+id/description_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Description"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/add_to_favorites_button"
            app:layout_constraintTop_toBottomOf="@+id/add_to_favorites_button" />

        <TextView
            android:id="@+id/description_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/description_label"
            app:layout_constraintTop_toBottomOf="@+id/description_label"
            tools:text="Anthurium andraeanum or Flamingo Lily is a herbaceous evergreen plant that grows to 40 cm in height. The dark green leaves are heart-shaped and glossy. The inflorescence is made up of a cream yellow tail-like spadix and waxy red spathe. Coupled with frequent blooming and tolerance to partial shade, it is cultivated to produce various colours and sizes of spathe, making Flamingo Lily a popular houseplant."
            android:textColor="@color/black" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#4CAF50"
            android:text="Back"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/description_text_view"
            app:layout_constraintTop_toBottomOf="@+id/description_text_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>